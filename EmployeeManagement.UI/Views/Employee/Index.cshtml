@model IEnumerable<EmployeeViewModel>

<h3 class="display-4">Employees</h3>
<button class="btn btn-success" data-toggle="modal" data-target="#exampleModal"> Create New Employee</button>
<!----Modal--->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="exampleModalLabel">Employee Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="createform">
                    <label>Name</label><br>
                    <input type="text" style="width:100%" id="name" required name="name" placeholder="Enter your name" pattern="[A-Za-z\s]{1,20}"/><br>
                    <label for="department">Department</label><br>
                    <select id="department" required name="department" style="width:100%">
                        <option value="">----Choose an Option----</option>
                        <option value="Accounts">Accounts</option>
                        <option value="Finance">Finance</option>
                        <option value="Developer">Developer</option>
                        <option value="HR">HR</option>
                    </select><br>
                    <label>Age</label><br>
                    <input type="number" style="width:100%" id="age" required name="age" min="18" max="55" placeholder="Enter your age"/><br>
                    <label>Address</label><br>
                    <input type="text" style="width:100%" id="address" required name="address" placeholder="Enter your Address" pattern="[A-Za-z\s]{1,100}"/><br><br><br>
                    <button class="btn btn-success" type="submit" value="submit">
                    Submit
                    </button>
                </form>
            </div>
           
        </div>
    </div>
</div>
<!--updateModel-->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="updateModalLabel">Employee Edit</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateform">
                    <label>Id:</label><br>
                    <input type="number" style="width:100%" id="updateid" disabled name="id"  /><br>
                    <label>Name</label><br>
                    <input type="text" style="width:100%" id="updatename" name="name" pattern="[A-Za-z\s]{1,20}}"  /><br>
                    <label for="department">Department</label><br>
                    <select id="updatedepartment" name="department" required style="width:100%">
                        <option value="">----Choose an Option----</option>
                        <option value="Accounts">Accounts</option>
                        <option value="Finance">Finance</option>
                        <option value="Developer">Developer</option>
                        <option value="HR">HR</option>
                        <option value="Network Administration">Network Administration</option>
                    </select><br>
                    <label>Age</label><br>
                    <input type="number" style="width:100%"  id="updateage" required name="age" min="18" max="55"/><br>
                    <label>Address</label><br>
                    <input type="text" style="width:100%" id="updateaddress" required name="address" pattern="[A-Za-z\s]{1,100}" /><br><br><br>
                    <button class="btn btn-success" type="submit" value="submit">
                     Update
                     </button>
                </form>
            </div>

        </div>
    </div>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                <b>Id</b>
            </td>
            <td>
                <b>Name</b>
            </td>
            <td>
                <b>Department</b>
            </td>
            <td>
            </td>
        </tr>

    </thead>
    @foreach (var employee in Model)
    {
<tr>
    <td>@employee.Id</td>
    <td>@employee.Name</td>
    <td>@employee.Department</td>
    <td>
        <button class="btn btn-primary employeeDetails" data-id="@employee.Id"> Details</button>
        <button class="btn btn-info employeeEdit" data-id="@employee.Id" data-toggle="modal" data-target="#updateModal">Edit</button>
        <button class="btn btn-danger employeeDelete" data-id="@employee.Id"> Delete</button>
    </td>
</tr>}
</table>

<div id="EmployeeCard">

</div>

@section Scripts{
    <script src="~/js/employee.js"></script>
}
